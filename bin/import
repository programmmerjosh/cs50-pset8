#!/usr/bin/env php
<?php

	require(__DIR__ . "/../includes/config.php");
	
	$myFile = fopen('/home/ubuntu/workspace/pset8/bin/US.txt', 'r');
	
	if (!$myFile) 
	{
    	echo 'Could not open file US.txt';
	}
	
	// validations
	if (!(file_exists("/home/ubuntu/workspace/pset8/bin/US.txt")) || !(is_readable("/home/ubuntu/workspace/pset8/bin/US.txt")))
	{
		echo 'File does not exist or is not readable';
	}
	else
	{
		while ($row = fgetcsv($myFile, 1000, "\t"))
	    {
	    	// insert query
			$insert = CS50::query("INSERT INTO places 
			(country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, 
			admin_code2, admin_name3, admin_code3, latitude, longitude, accuracy) 
		    VALUES(?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", $row[0], $row[1], $row[2], $row[3],
		    $row[4], $row[5], $row[6], $row[7], $row[8], $row[9], $row[10], $row[11]);
		}
	
		// close file
		fclose($myFile);
	}
	
?>